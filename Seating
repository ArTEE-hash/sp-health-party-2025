  <script>
    let selectedTableElement = null;
    
    function selectTable(tableNumber, isVip = false, isFull = false) {
      // Clear previous selection
      if (selectedTableElement) {
        selectedTableElement.classList.remove('selected');
      }
      
      // Select new table
      event.currentTarget.classList.add('selected');
      selectedTableElement = event.currentTarget;
      
      // Show table details
      const detailSection = document.getElementById('tableDetail');
      const selectedTableSpan = document.getElementById('selectedTable');
      const tableInfo = document.getElementById('tableInfo');
      
      selectedTableSpan.textContent = tableNumber;
      
      if (isFull) {
        tableInfo.innerHTML = `
          <strong>สถานะ:</strong> โต๊ะเต็ม<br>
          <strong>หมายเหตุ:</strong> โต๊ะนี้มีผู้จองครบแล้ว กรุณาเลือกโต๊ะอื่น
        `;
      } else if (isVip) {
        tableInfo.innerHTML = `
          <strong>ประเภท:</strong> โต๊ะ VIP<br>
          <strong>จำนวนที่นั่ง:</strong> 10 ที่นั่ง<br>
          <strong>สำหรับ:</strong> ผู้บริหาร และแขกผู้มีเกียรติ<br>
          <strong>สถานะ:</strong> ว่าง 3 ที่นั่ง
        `;
      } else {
        tableInfo.innerHTML = `
          <strong>ประเภท:</strong> โต๊ะทั่วไป<br>
          <strong>จำนวนที่นั่ง:</strong> 10 ที่นั่ง<br>
          <strong>สถานะ:</strong> ว่าง 5 ที่นั่ง
        `;
      }
      
      detailSection.classList.add('show');
    }
    
    function searchTable() {
      const input = document.getElementById('searchInput');
      const resultDiv = document.getElementById('searchResult');
      const resultText = document.getElementById('resultText');
      
      if (input.value.trim() === '') {
        resultDiv.classList.remove('show');
        return;
      }
      
      // Simulate search result
      const tables = {
        'อรพรรณ': 'A1',
        'สมชาย': 'A2',
        'มาลี': 'B1',
        'วิชัย': 'B2',
        'พิมพ์ชนก': 'C1'
      };
      
      let found = false;
      for (let name in tables) {
        if (input.value.includes(name)) {
          resultText.innerHTML = `คุณ${input.value} อยู่ที่ <strong>โต๊ะ ${tables[name]}</strong>`;
          found = true;
          
          // Highlight the table
          const allTables = document.querySelectorAll('.table');
          allTables.forEach(table => {
            if (table.querySelector('.table-number').textContent === tables[name]) {
              table.classList.add('selected');
              if (selectedTableElement) {
                selectedTableElement.classList.remove('selected');
              }
              selectedTableElement = table;
            }
          });
          break;
        }
      }
      
      if (!found) {
        resultText.innerHTML = 'ไม่พบข้อมูล กรุณาตรวจสอบชื่อ-นามสกุลอีกครั้ง';
      }
      
      resultDiv.classList.add('show');
    }
    
    // Search on Enter key
    document.getElementById('searchInput').addEventListener('keypress', function(e) {
      if (e.key === 'Enter') {
        searchTable();
      }
    });
  </script>
