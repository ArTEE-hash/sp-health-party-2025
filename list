  <script>
    // ใส่ลิงก์ Web App ของคุณที่นี่
    const WEB_APP_URL = "YOUR_WEB_APP_URL_HERE";

    fetch(WEB_APP_URL)
      .then(res => res.json())
      .then(data => {
        const tableBody = document.querySelector("#retireeTable tbody");
        data.forEach(r => {
          tableBody.innerHTML += `<tr><td>${r.name}</td><td>${r.position}</td><td>${r.dept}</td></tr>`;
        });
      })
      .catch(err => console.error("Error fetching data:", err));
  </script>
